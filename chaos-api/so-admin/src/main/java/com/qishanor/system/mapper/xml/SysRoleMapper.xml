<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qishanor.system.mapper.SysRoleMapper">
    <resultMap id="BaseResultMap" type="com.qishanor.system.model.SysRole">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="description" column="description"/>
        <result property="dsType" column="ds_type"/>
        <result property="dsScope" column="ds_scope"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateBy" column="update_by"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>
    <select id="selectRolesByUserId" resultType="com.qishanor.system.model.SysRole">
        select
            r.id,
            r.name,
            r.code,
            r.description,
            r.ds_type,
            r.ds_scope,
            r.create_time,
            r.del_flag
        from sys_role r,sys_user_role ur
        where r.id=ur.role_id
          and r.del_flag='0'
          and ur.user_id=#{userId}
    </select>

</mapper>


